<div class="container justify-content-center my-5">
<%= simple_form_for [@car, @review] do |f| %>
  <% if @review.errors.any? %>
  <% @review.errors.full_messages.each do |error| %>
    <p><%= error %></p>
  <% end %>
  <% end %>
  <%= f.input :content, label: false, placeholder: "Add a comment"%>
  <%= f.submit "Add a review", class: "btn btn-danger" %>
<% end %>
</div>
