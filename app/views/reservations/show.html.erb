<div class="container-fluid">
  <div class="row">
    <div id="reservation-card" class="bg-white mt-2 p-4">
      <div class="mb-2">
        <h4 class="text-center mt-2">Your reservation</h4>
      </div>
      <div class="card w-100">
        <%= cl_image_tag(@reservation.car.photo, height:300, crop: "fill") %>
        <div class="card-body">
          <h5 class="card-title"><%= @reservation.car.model %><%= @reservation.car.brand %></h5>
          <p class="card-text">You are about to make your dream true. Reservation is done! <strong>Thanks for trusting us!</strong> </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item d-flex justify-content-between">
            <div>
              <p>Pick up day: </p>
            </div>
            <div>
              <p><strong><%= @reservation.starting_date %></strong></p>
            </div>
          </li>
          <li class="list-group-item d-flex justify-content-between">
            <div>
              <p>Drop up day: </p>
            </div>
            <div>
              <p><strong><%= @reservation.end_day %></strong></p>
            </div>
          </li>
          <li class="list-group-item d-flex justify-content-between">
            <div>
              <p>Total cost: </p>
            </div>
            <div>
              <p><strong><%= @reservation.car.price %></strong></p>
            </div>
          </li>
        </ul>
        <div class="card-body d-flex justify-content-between">
          <div>
            <a href="<%= reservations_path %> " class="card-link">My reservations</a>
          </div>
          <div>
            <a href="<%= car_path %> " class="card-link">My car</a>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-12">
     <div
     id="map"
     style="width: 100%;
     height: 800px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

   </div>
 </div>
</div>
</div>

<%= render 'reservations/review_form' %>
