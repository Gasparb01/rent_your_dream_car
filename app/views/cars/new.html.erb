<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <h1>Add a car for rent</h1>

      <%= simple_form_for @car do |f| %>
      <%= f.input :model %>
      <%= f.input :brand %>
      <%= f.input :year %>
      <%= f.input :category, collection: Car::CATEGORIES %>
      <%= f.input :description %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>


      <%= f.submit "Add a car", class: "btn btn-primary" %>
      <% end %>
      <button id="myBtn" class="btn btn-primary"><i class="fa fa-arrow-up"><i></button>
    </div>
  </div>
</div>
