<div class="main-container-search">
  <div class="cards-search mt-2">

    <% @cars.each do |car| %>
    <%= link_to car_path(car), class:"card-search-wrapper" do %>
    <div class="card-search my-2 mx-3">
      <%= cl_image_tag(car.photo, width: 500, height: 600, crop: :fill) %>
      <div class="card-search-infos">
        <h2> <%= car.brand %> - <%= car.model %></h2>
        <p><strong>Category: </strong><%= car.category %></p>
        <p><strong>Description </strong><%= car.description %></p>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>

  <div
  id="map"
  style="width: 550px;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

  </div>


</div>



